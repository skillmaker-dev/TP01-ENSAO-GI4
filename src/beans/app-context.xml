<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="gestionMaterielController" class="com.ensa.gi4.controller.GestionMaterielController">
        <property name="gestionMaterielService" ref="gestionMaterielService"/>
        <property name="allocationMaterielService" ref="allocationMaterielService"/>
    </bean>







    <bean id="materielDAO" class ="com.ensa.gi4.datatabase.MaterielDAO" factory-method="getInstance"/>
    <bean id="materielDAOPrototype" class ="com.ensa.gi4.datatabase.MaterielDAO" factory-method="getInstance"/>

    <bean id="gestionMaterielService" class="com.ensa.gi4.service.impl.GestionMaterielServiceImpl">
        <property name="materielDao" ref="materielDAO" />
    </bean>


    <bean id="allocationMaterielService" class="com.ensa.gi4.service.impl.AllocationMaterielServiceImpl" scope="prototype">
        <property name="materielDaoPrototype" ref="materielDAOPrototype" />
        <property name="materielDao" ref="materielDAO" />
    </bean>

</beans>
